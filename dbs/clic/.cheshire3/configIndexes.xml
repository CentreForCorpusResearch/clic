<c3:config xmlns:c3="http://www.cheshire3.org/schemas/config/" xmlns:mets="http://www.loc.gov/METS/" xmlns:dcterms="http://purl.org/dc/terms/" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:dc="http://purl.org/dc/elements/1.1/">
  <c3:subConfigs>
    <c3:subConfig type="index" id="idx-identifier">
      <c3:docs>Identifier Index</c3:docs>
      <c3:objectType>cheshire3.index.SimpleIndex</c3:objectType>
      <c3:paths>
        <c3:object ref="indexStore" type="indexStore"/>
      </c3:paths>
      <c3:source>
        <c3:selector ref="idSelector"/>
        <c3:process>
          <c3:object ref="SimpleExtractor" type="extractor"/>
        </c3:process>
      </c3:source>
    </c3:subConfig>
    <c3:subConfig type="index" id="idx-creationDate">
      <c3:docs>Created Time Index</c3:docs>
      <c3:objectType>cheshire3.index.SimpleIndex</c3:objectType>
      <c3:paths>
        <c3:object ref="indexStore" type="indexStore"/>
      </c3:paths>
      <c3:source>
        <c3:selector ref="nowTimeSelector"/>
        <c3:process>
          <c3:object ref="SimpleExtractor" type="extractor"/>
          <c3:object ref="DateTokenizer" type="tokenizer"/>
          <c3:object ref="SimpleTokenMerger" type="tokenMerger"/>
        </c3:process>
      </c3:source>
      <c3:options>
        <c3:setting type="noIndexDefault">1</c3:setting>
        <c3:setting type="noUnindexDefault">1</c3:setting>
        <c3:setting type="vectors">1</c3:setting>
      </c3:options>
    </c3:subConfig>
    <c3:subConfig type="index" id="idx-modificationDate">
      <c3:docs>Modified Time Index</c3:docs>
      <c3:objectType>cheshire3.index.SimpleIndex</c3:objectType>
      <c3:paths>
        <c3:object ref="indexStore" type="indexStore"/>
      </c3:paths>
      <c3:source>
        <c3:selector ref="nowTimeSelector"/>
        <c3:process>
          <c3:object ref="SimpleExtractor" type="extractor"/>
          <c3:object ref="DateTokenizer" type="tokenizer"/>
          <c3:object ref="SimpleTokenMerger" type="tokenMerger"/>
        </c3:process>
      </c3:source>
      <c3:options>
        <c3:setting type="vectors">1</c3:setting>
      </c3:options>
    </c3:subConfig>
    <c3:subConfig type="index" id="idx-anywhere">
      <c3:docs>Anywhere / Full-text Index</c3:docs>
      <c3:objectType>cheshire3.index.SimpleIndex</c3:objectType>
      <c3:paths>
        <c3:object ref="indexStore" type="indexStore"/>
      </c3:paths>
      <c3:source mode="data">
        <c3:selector ref="anywhereXPathSelector"/>
        <c3:process>
          <c3:object ref="SimpleExtractor" type="extractor"/>
          <c3:object ref="RegexpFindTokenizer" type="tokenizer"/>
          <c3:object ref="SimpleTokenMerger" type="tokenMerger"/>
          <c3:object ref="DiacriticNormalizer" type="normalizer"/>
          <c3:object ref="CaseNormalizer" type="normalizer"/>
        </c3:process>
      </c3:source>
      <c3:source mode="all|any|=">
        <c3:process>
          <c3:object ref="SimpleExtractor" type="extractor"/>
          <c3:object ref="PreserveMaskingTokenizer" type="tokenizer"/>
          <c3:object ref="SimpleTokenMerger" type="tokenMerger"/>
          <c3:object ref="DiacriticNormalizer" type="normalizer"/>
          <c3:object ref="CaseNormalizer" type="normalizer"/>
        </c3:process>
      </c3:source>
      <c3:source mode="exact">
        <c3:process>
          <c3:object ref="SimpleExtractor" type="extractor"/>
          <c3:object ref="PreserveMaskingTokenizer" type="tokenizer"/>
          <c3:object ref="SimpleTokenMerger" type="tokenMerger"/>
          <c3:object ref="SpaceNormalizer" type="normalizer"/>
          <c3:object ref="DiacriticNormalizer" type="normalizer"/>
          <c3:object ref="CaseNormalizer" type="normalizer"/>
        </c3:process>
      </c3:source>
    </c3:subConfig>
    <c3:subConfig type="index" id="idx-title">
      <c3:docs>Title Index</c3:docs>
      <c3:objectType>cheshire3.index.SimpleIndex</c3:objectType>
      <c3:paths>
        <c3:object ref="indexStore" type="indexStore"/>
      </c3:paths>
      <c3:source>
        <c3:selector ref="titleXPathSelector"/>
        <c3:process>
          <c3:object ref="SimpleExtractor" type="extractor"/>
          <c3:object ref="SpaceNormalizer" type="normalizer"/>
          <c3:object ref="DiacriticNormalizer" type="normalizer"/>
          <c3:object ref="CaseNormalizer" type="normalizer"/>
        </c3:process>
      </c3:source>
      <c3:options>
        <c3:setting type="sortStore">1</c3:setting>
      </c3:options>
    </c3:subConfig>
    <c3:subConfig type="index" id="idx-title-kwd">
      <c3:docs>Title Keywords Index</c3:docs>
      <c3:objectType>cheshire3.index.SimpleIndex</c3:objectType>
      <c3:paths>
        <c3:object ref="indexStore" type="indexStore"/>
      </c3:paths>
      <c3:source mode="data">
        <c3:selector ref="titleXPathSelector"/>
        <c3:process>
          <c3:object ref="SimpleExtractor" type="extractor"/>
          <c3:object ref="RegexpFindTokenizer" type="tokenizer"/>
          <c3:object ref="SimpleTokenMerger" type="tokenMerger"/>
          <c3:object ref="DiacriticNormalizer" type="normalizer"/>
          <c3:object ref="CaseNormalizer" type="normalizer"/>
        </c3:process>
      </c3:source>
      <c3:source mode="all|any">
        <c3:process>
          <c3:object ref="SimpleExtractor" type="extractor"/>
          <c3:object ref="PreserveMaskingTokenizer" type="tokenizer"/>
          <c3:object ref="SimpleTokenMerger" type="tokenMerger"/>
          <c3:object ref="DiacriticNormalizer" type="normalizer"/>
          <c3:object ref="CaseNormalizer" type="normalizer"/>
        </c3:process>
      </c3:source>
      <c3:source mode="exact|=">
        <c3:process>
          <c3:object ref="SimpleExtractor" type="extractor"/>
          <c3:object ref="PreserveMaskingTokenizer" type="tokenizer"/>
          <c3:object ref="SimpleTokenMerger" type="tokenMerger"/>
          <c3:object ref="SpaceNormalizer" type="normalizer"/>
          <c3:object ref="DiacriticNormalizer" type="normalizer"/>
          <c3:object ref="CaseNormalizer" type="normalizer"/>
        </c3:process>
      </c3:source>
    </c3:subConfig>
  </c3:subConfigs>
</c3:config>
